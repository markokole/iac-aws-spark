[Unit]
Description=Apache Spark History Server
After=network.target
After=systemd-user-sessions.service
After=network-online.target

[Service]
User=spark
Type=forking
ExecStart={{ spark.landing_zone }}/{{ spark.spark_home }}/sbin/start-history-server.sh
ExecStop={{ spark.landing_zone }}/{{ spark.spark_home }}/sbin/stop-history-server.sh
TimeoutSec=30
Restart= on-failure
RestartSec= 30
StartLimitInterval=350
StartLimitBurst=10

[Install]
WantedBy=multi-user.target